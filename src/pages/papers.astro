<style>
    .authors {
        color: var(--blue);
    }
    .wrapper {
        margin: 0.5rem;
    }
    .abstractlabel {
        font-weight: 600;
        color: var(--yellow);
    }
    .abstract {
        margin: 0.5rem;
        padding: 0.5rem;
        background-color: var(--background2);
    }
    .current {
        font-weight: 700;
        color: var(--peach);
    }
    .old {
        font-weight: 700;
        color: var(--yellow);
    }
    summary {
        list-style-type: "\f0794";
    }
    details[open] > summary {
        list-style-type: "\f0792";
    }

    @layer utils {
        [is-~="badge"] a {
            text-decoration: none;
            color: inherit;
        }
    }

    .flex-container {
        display: flex;
        flex-wrap: wrap;
    }

    .flex-item-left {
        padding: 1rem;
        flex: 65%;
    }

    .flex-item-right {
        flex: 35%;
        text-align: center;
    }
    [is-~="badge"] a {
        text-decoration: none;
        color: inherit;
    }

    ul {
        display: inline-block;
        text-align: left;
    }
    button a {
        text-decoration: none;
        color: inherit;
    }

    .flex-item-right > .box-square {
        padding-top: 1rem;
    }

    @media (max-width: 800px) {
        .flex-item-right,
        .flex-item-left {
            flex: 100%;
        }
    }

    .post {
        strong {
            color: var(--teal) !important;
        }
    }
    .alert {
        strong {
            color: var(--peach) !important;
        }
    }

    @layer utils {
        [box-~="square"] {
            --box-border-color: var(--background2);
        }
        [box-~="square"] .post {
            --box-border-color: var(--background0);
            [is-~="badge"] a {
                text-decoration: none;
                color: inherit;
            }
            [is-~="badge"]:hover {
                --badge-color: var(--foreground0);
                font-weight: 600;
            }
        }
        [box-~="square"] .journal {
            --box-border-color: var(--mauve);
        }

        @media (max-width: 600px) {
            [box-~="square"] .journal &[variant-="foreground0"],
            &[variant-="mauve"] {
                font-size: 13px;
            }
            [box-~="square"] .preprint &[variant-="foreground0"],
            &[variant-="mauve"] {
                font-size: 13px;
            }
        }
        [box-~="square"] .alert {
            margin-top: 0.5rem;
            margin-bottom: 0.5rem;
            --box-border-color: var(--peach);
            [is-~="badge"] a {
