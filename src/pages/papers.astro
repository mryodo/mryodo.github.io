---
import Layout from "../layouts/index.astro";
import Navbar from "../components/navbar.astro";
const posts = Object.values(import.meta.glob("./papers/*.md", { eager: true }));
posts.sort(
    (a, b) => Date.parse(b.frontmatter.sort) - Date.parse(a.frontmatter.sort),
);
const posts2025 = posts.filter((post) => post.frontmatter.year == "2025");
const posts2024 = posts.filter((post) => post.frontmatter.year == "2024");
const posts2023 = posts.filter((post) => post.frontmatter.year == "2023");
const posts2020 = posts.filter((post) => post.frontmatter.year == "2020");
const posts2017 = posts.filter((post) => post.frontmatter.year == "2017");
